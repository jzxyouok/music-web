<struts>
	<package name="album" namespace="/" extends="struts-base">
		<!-- 专辑管理action -->
		<action name="album_*" class="albumAction" method="{1}">
			<result name="list">/front/album/list.jsp</result>
			<result name="listForSearch">/front/album/listForSearch.jsp</result>
			<result name="view">/front/album/view.jsp</result>
		</action>		
	</package>
</struts>